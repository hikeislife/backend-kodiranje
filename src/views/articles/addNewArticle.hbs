<article>
  <section>
    <h1>Novi članak</h1>
    <div>
      <form      {{!-- enctype=     "multipart/form-data" --}}
                 method=      "POST"
                 action=      "/admin/addPost">
        <fieldset>
          <legend>Osnovni sadržaj</legend>
        <div     class=       "adminInput">
          <label for=         "selectedURL">   Naziv artikla</label>
          <input type=        "text" 
                 class=       "admin" 
                 name=        "selectedURL" 
                 id=          "selectedURL" 
                 placeholder= "Ovo određuje url strane">
        </div>
        <div     class=       "adminInput">
          <label for=         "navName">       Skraćeni naziv</label>
          <input type=        "text" 
                 class=       "admin" 
                 name=        "navName" 
                 id=          "navName" 
                 placeholder= "Ovo određuje šta piše u meniju">
        </div>
        <div     class=       "adminInput">
          <label for=         "articleContent">Artikal</label><br>
          <textarea name=     "articleContent" 
                 id=          "articleContent" 
                 placeholder= "Unesi sadržaj bez <article> taga"
                 class=       "admin"></textarea>
        </div>
        <div        class=    "adminInput">
          <label    for=      "courseName">    Kurs</label>
          <select   class=    "admin" 
                    id=       "courseName"
                    name=     "courseName">
            {{#each courseList}}
              <option value="{{setId}}"> {{name}} </option>
            {{/each}}
            
          </select>
        </div>
        <div     class=       "adminInput">
          <label for=         "tags">          Tagovi</label><br>
          <input type=        "text" 
                 id=          "tags" 
                 class=       "admin m2r" 
                 name=        "tags" 
                 placeholder= "(razdvojeni zarezom)">
        </div>
        <div     class=       "adminInput">
          <input type=        "checkbox" 
                 name=        "published" 
                 id=          "published">
          <label for=         "published"
                 class=       "reorderCheckbox nudge">Objavi?</label>
        </div>
        <div     class=       "adminInput"
                 style=       "visibility: hidden; 
                               margin-bottom: -7em">
          <label for=         "order">         Order</label>
          <input type=        "number" 
                 class=       "admin" 
                 name=        "order" 
                 id=          "order"
                 value=       "{{order}}">
        </div>
        </fieldset>

        <fieldset>
          <legend>SEO optimizacija</legend>
        <div     class=       "adminInput">
          <label for=         "googTitle">     Naslov google pretrage</label><br>
          <input type=        "text" 
                 id=          "googTitle" 
                 class=       "admin" 
                 name=        "googTitle" 
                 placeholder= "optimalno do 80 karaktera" >
        </div>
        <div     class=       "adminInput">
          <label for=         "googDesc">      Opis u google pretrazi</label><br>
          <input type=        "text" 
                 id=          "googDesc" 
                 class=       "admin m2r countMe" 
                 name=        "googDesc"
            
                 placeholder= "Opiši sadržaj strane, do oko 155 karaktera">
          <span  class=       "adminCounter googDesc" 
                 data-counter="155">155</span>
        </div>
        </fieldset>

        <fieldset>
          <legend>Optimizacija za društvene mreže</legend>
        <div     class=       "adminInput">
          <label for=         "socTitle">      Naslov posta na društvenim mrežama</label><br>
          <input type=        "text" 
                 id=          "socTitle" 
                 class=       "admin" 
                 name=        "socTitle" 
                 placeholder= "(za društvene mreže)">
        </div>
        <div     class=       "adminInput">
          <label for=         "socDesc">       Opis u postu na društvenim mrežama</label><br>
          <input type=        "text" 
                 id=          "socDesc" 
                 class=       "admin m2r countMe" 
                 name=        "socDesc"
            
                 placeholder= "Opis za društvene mreže, do 200 karaktera">
          <span  class=       "adminCounter socDesc" 
                 data-counter="200">200</span>
        </div>
        <div     class=       "adminInput">
          <label for=         "socImage">      Slika za društvene mreže 1200x630px sa banerom</label>
          <input type=        "file" 
                 class=       "admin" 
                 id=          "socImage" 
                 name=        "socImage">
        </div>
        </fieldset>
      <button    id=          "dugme"
                 class="wideAdminButton admin-saveButton">Sačuvaj</button>
    </div>
    </form>
  </section>
</article>

<script type="module" src="../../js/articles/addNewArticle.js"></script>