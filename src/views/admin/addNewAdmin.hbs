<article>
  <h1>Dodaj novog admina</h1>
  {{#if errorMessage}}<p class="adminError">{{errorMessage}}</p>{{/if}}
  <div>
    <form      action="/admin/addNewAdmin"    method="post">
      <div     class=       "adminInput">
        <label for="name">Unesi ime:</label>
        <input type="text" id="name" name="name" class="admin">
      </div>
      <div     class=       "adminInput">
        <label for="username">Unesi korisničko ime:</label>
        <input type="text" id="username" name="username" class="admin">
      </div>
      <div     class=       "adminInput">
        <label for="email">Unesi email:</label>
        <input type="text" id="email" name="email" class="admin">
      </div>
      <div     class=       "adminInput">
        <label for="password">Unesi lozinku:</label>
        <input type="password" id="password" name="password" class="admin">
      </div>
      <div class="adminInput">
        <label for="dugme">Sačuvaj</label>
        <input type="submit" value="Sačuvaj" id="dugme" class="admin">
      </div>
    </form>
  </div>
</article>
